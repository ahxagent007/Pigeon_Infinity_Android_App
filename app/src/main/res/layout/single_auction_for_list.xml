<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/IV_auctionPic"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/website"
        android:paddingLeft="3dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/TV_auctionName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ajay Sinha Loft Auction"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="5dp"/>

        <TextView
            android:id="@+id/TV_auctionStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auction Start: "
            android:textSize="15dp"
            android:textColor="#007806"
            android:textStyle="bold"
            android:gravity="left"
            android:padding="5dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/TV_auctionEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auction End: "
            android:textSize="15dp"
            android:textColor="#78003e"
            android:textStyle="bold"
            android:gravity="left"
            android:padding="5dp"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>

</LinearLayout>